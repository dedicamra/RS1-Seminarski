
@{
    ViewData["Title"] = "LinijaVozacDodaj";
    Layout = null;
}
@model WebApplication1.Models.Menadzer.LinijaVozacDodajVM

<form asp-action="LinijaVozacSnimi" asp-controller="Menadzer">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Uredi</h3>
            </div>
            <div class="modal-body">
                <div>
                    <input hidden readonly asp-for="LinijaID" />
                </div>
                <div>
                    <label>Vozac</label>
                    <select asp-for="VozacID" asp-items="@Model.Vozaci"></select>
                </div>
            </div>
            <div class="modal-footer">
                <input type="button" value="Odustani" onClick="document.location.reload(true)" class="btn btn-outline-warning">
                <input type="submit" name="Snimi" value="Sačuvaj" class="btn btn-outline-primary"/>
            </div>
        </div>
    </div>
</form>

